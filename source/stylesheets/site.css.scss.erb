body {
  background: #fff;
  color: #333;
  font-family: "Lora", "Times New Roman", serif;
  font-size: 16px;
  max-width: 752px;
  margin: auto;
  margin-bottom: 2em;
  padding: 1em;
  line-height: 22px;
}

@media(min-width:768px) {
  body {
    font-size: 20px;
    line-height: 32px;
  }
}

h1, h2, h3, h4, h5 {
  font-family: "Roboto", "Helvetica", sans-serif;
  margin-top: 1em;
  margin-bottom: 0.5em;
  line-height: 1.0em;
}

p {
  margin-top: 0.5em;
  margin-bottom: 1.2em;
}

pre {
  overflow: auto;
  font-size: 0.9em;
  margin-bottom: 2.0em;
}

p code, li code {
  background: #eee;
  padding-left: 0.2em;
  padding-right: 0.2em;
}

ul.navbar {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

ul.navbar li {
  display: inline;
}

ul.navbar li a {
  padding-right: 1em;
}

a[href^="http"]:after {
  content: "\f08e";
  font-family: "FontAwesome";
  font-size: 0.8em;
  display:inline-block;
  padding-left: 0.3em;
  text-decoration: none;
}

div.warning {
  background: #ff0;
  padding: 0.5em;
  border-radius: 0.25em;
  margin: 1em 0;
}

