body {
  max-width: 752px;
  margin: auto;
  margin-bottom: 2em;
  padding: 16px;
  font-size: 16px;
  line-height: 22px;
  font-family: "Lora", "Times New Roman", serif;
  color: #444;
}

@media(min-width:768px) {
  body {
    font-size: 20px;
    line-height: 32px;
  }
}

h1, h2, h3, h4, h5 {
  font-family: "Roboto", "Helvetica", sans-serif;
  margin-top: 1em;
  margin-bottom: 0.5em;
}

p {
  margin-top: 0.5em;
  margin-bottom: 1.2em;
}

pre {
  overflow: auto;
}

pre {
  font-size: 0.9em;
}

p code, li code {
  background: #eee;
  padding-left: 0.2em;
  padding-right: 0.2em;
}

ul.navbar {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

ul.navbar li {
  display: inline;
}

ul.navbar li a {
  padding-right: 1em;
}

